{
  "name": "stylelint-formatter-compact",
  "version": "1.0.0",
  "description": "A compact formatter for stylelint",
  "main": "index.js",
  "scripts": {
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "dry-release": "npmpub --dry --verbose",
    "jest": "jest",
    "lint": "eslint . --ignore-path .gitignore",
    "release": "npmpub",
    "test": "npm run lint && npm run jest",
    "watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ntwb/stylelint-formatter-compact.git"
  },
  "keywords": [
    "styelint",
    "stylelint-formatter",
    "compact"
  ],
  "author": "Stephen Edgar",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ntwb/stylelint-formatter-compact/issues"
  },
  "homepage": "https://github.com/ntwb/stylelint-formatter-compact#readme",
  "dependencies": {
    "lodash": "^4.17.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^6.0.2",
    "@commitlint/config-conventional": "^6.0.2",
    "eslint": "^4.15.0",
    "eslint-config-stylelint": "^8.1.0",
    "eslint-plugin-jest": "^21.6.1",
    "eslint-plugin-node": "^6.0.0",
    "husky": "^0.14.3",
    "jest": "^22.0.6",
    "npmpub": "^3.1.0",
    "stylelint": "^9.0.0"
  },
  "peerDependencies": {
    "stylelint": ">=8.4.0 <10.0.0"
  },
  "eslintConfig": {
    "env": {
      "jest": true,
      "node": true
    },
    "extends": [
      "stylelint",
      "plugin:jest/recommended",
      "plugin:node/recommended"
    ],
    "plugins": [
      "jest",
      "node"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
